
use_directory_urls: false

site_name: "{{ site_name }}"
site_author: "{{ author }}"
docs_dir: '../../docs/it'                           # Dove trovare i markdown italiani
site_dir: '../../generated/it'                      # Dove mettere gli HTML italiani

theme:
  name: material

nav:
{{ nav_yaml | indent(0) }}

# Configuration
theme:
  name: material
  custom_dir: '../../overrides/'                  # Dove vive la customizzazione del tema
  logo: personalization/logo.png
  language: it

extra_css:
  - personalization/eng-standard-theme.css
  - personalization/toc.css
  - personalization/fabric.min.css

extra_javascript:
  - personalization/toc.js
  - personalization/script.js

# Customization
extra:
  version:
    provider: mike
  navigation:
    collapse: true
  media_dir: 'images/media'
  alternate:
      # Switch to English
    - name: English
      link: /en/
      lang: en
    # Switch to Italiano
    - name: Italiano
      link: /it/
      lang: it

plugins:
- search
- render_swagger:
      css: personalization/swagger-ui.css
- print-site

markdown_extensions:
  - markdown_captions
  - admonition
  - pymdownx.details
  - pymdownx.superfences
