
use_directory_urls: false

site_name: "{{ site_name }}"
site_author: "{{ author }}"


theme:
  name: material


nav:
{{ nav_yaml | indent(0) }}

# Configuration
theme:
  name: material                 # This is where the customization of the theme lives  
  logo: personalization/logo.png
  language: en 

extra_css:
  - /personalization/eng-standard-theme.css
  - /personalization/toc.css
  - /personalization/fabric.min.css

extra_javascript:
  - /personalization/toc.js
  - /personalization/script.js

# Customization
extra:
  version:
    provider: mike
  navigation:
    collapse: true
  media_dir: 'images/extract/media'


plugins:
- search 
- render_swagger:
    css: personalization/swagger-ui.css
- i18n:
      docs_structure: suffix
      fallback_to_default: false
      languages:
        - locale: it
          default: true
          name: italian
          build: true
        - locale: en
          name: English
          build: true
- print-site

markdown_extensions:
  - markdown_captions
  - admonition
  - pymdownx.details
  - pymdownx.superfences
